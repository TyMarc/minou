<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/avatar_bg"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:id="@+id/chat_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="58dp"
        android:layout_toRightOf="@id/avatar"
        android:background="@drawable/chat_incoming_sel"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="@string/hello_world"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="@string/hello_world"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/message"
            android:layout_marginTop="3dp"
            android:text="@string/hello_world"
            android:textColor="@color/darker_grey"
            android:textSize="11sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="58dp"
        android:layout_toRightOf="@id/avatar"
        android:background="@color/white"
        android:paddingLeft="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_thumb"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/picture"
        android:layout_alignLeft="@id/picture"
        android:layout_alignRight="@id/picture"
        android:layout_alignTop="@id/picture"
        android:background="@color/black_transparent"
        android:padding="75dp"
        android:src="@drawable/play"
        android:tint="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/time_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="68dp"
        android:layout_toRightOf="@id/avatar"
        android:paddingBottom="5dp"
        android:text="@string/hello_world"
        android:textColor="@color/white"
        android:textSize="11sp" />

</RelativeLayout>