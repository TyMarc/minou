<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:StickyListHeadersListView="http://schemas.android.com/apk/res/com.lesgens.minou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/gen_sel"
            android:padding="5dp"
            android:src="@drawable/navigation_back" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/public_btn"
            android:layout_toRightOf="@id/back_btn"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/public_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/settings_btn"
            android:background="@drawable/gen_sel"
            android:padding="15dp"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/settings_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gen_sel"
            android:padding="12dp"
            android:src="@drawable/options" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/public_chooser"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/topBar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/connection_problem"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/public_chooser"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/lost_connectivity"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@id/connection_problem"
        StickyListHeadersListView:hasStickyHeaders="false"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:stackFromBottom="true" />

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/send_ft"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="40dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/send_ft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/editText"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/send"
            android:background="@drawable/gen_black_sel"
            android:padding="5dp"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/send_ft"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/gen_black_sel"
            android:padding="8dp"
            android:src="@drawable/send" >
        </ImageView>
    </RelativeLayout>

    <View
        android:id="@+id/public_chooser_sep"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/public_chooser"
        android:background="@drawable/bottom_shadow"
        android:visibility="gone" />

</RelativeLayout>